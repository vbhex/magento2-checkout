    require(['jquery'], function($) {
           $(".vbhexcheckout-button").click(function(){
			  $(".vbhexcheckout-account-name").toggleClass("active");
			  $(".vbhexcheckout-account-main").toggleClass("active");
		});

		$('body').on('click', function (e) {
			if (!$('.vbhexcheckout-account-main').is(e.target)
				&& $('.vbhexcheckout-account-main').has(e.target).length === 0
				&& $('.vbhexcheckout-account-main.active').has(e.target).length === 0
			) {
				$('.vbhexcheckout-account-main').removeClass('active');
				$('.vbhexcheckout-account-name').removeClass('active');
			}

		});

    });

